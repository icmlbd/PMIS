@model CustomerCreateViewModel

@{
    int slNo = 0; 
}

<h1>Customer Create</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control" asp-items="@Model.CustomerCategories" asp-for="CategoryId"> 
            <option value="">Select...</option>
            @* @if(Model.CustomerCategories!=null)
            {
                @foreach (var category in Model.CustomerCategories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            } *@
            
            
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age">Age</label>
        <input type="text" class="form-control" asp-for="Age" placeholder="Age">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<h1>Customer List</h1>

@if(Model==null || Model.Customers ==null || Model.Customers.Count==0)
{
    <h4>No Records Found!</h4>
}
else
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model.Customers)
            {
                <tr>
                    <td>@(++slNo)</td>
                    <td>@customer.Name</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Address</td>
                </tr>
            }
        </tbody>
    </table>
}


